<div class="jumbotron">
  <h1>🍔Burgers!🍔</h1>
</div> 
  

<h2>Eat Da Burger!</h2>

<div class="diningTable">
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
  

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <button type="submit">Add Burger</button>
  </div>

</form>
